{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"noEmit": true,
        "allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["**/*.ts"]
}
